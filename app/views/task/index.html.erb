<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li class="list-group-item">
          <%= link_to task.title, task_path(task) %>
          -
          <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task), method: :delete, data: { confirm: "Are you sure?" }%>
    </li>
  <% end %>
</ul>

<p><%= link_to "Add task", new_task_path %></p>

